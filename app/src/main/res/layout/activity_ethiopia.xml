<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    tools:context=".CountryActivities.EthiopiaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <com.smarteist.autoimageslider.SliderView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:id="@+id/EthiopiaSliderView"
                app:sliderAnimationDuration="600"
                app:sliderAutoCycleDirection="back_and_forth"
                app:sliderAutoCycleEnabled="true"
                app:sliderIndicatorAnimationDuration="600"
                app:sliderIndicatorGravity="center_horizontal|bottom"
                app:sliderIndicatorMargin="15dp"
                app:sliderIndicatorOrientation="horizontal"
                app:sliderIndicatorPadding="3dp"
                app:sliderIndicatorRadius="2dp"
                app:sliderIndicatorSelectedColor="#5A5A5A"
                app:sliderIndicatorUnselectedColor="#fff"
                app:sliderScrollTimeInSec="2"
                app:sliderStartAutoCycle="true"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="36dp"
                android:background="#007300"
                android:fontFamily="@font/robotoslabblack"
                android:text="Coffee production in Ethiopia"
                android:textColor="#e5e500"
                android:textSize="22sp" />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:fontFamily="@font/robotoslabblack"
                android:background="#ffff00"
                android:layout_marginTop="36dp"
                android:textColor="#db3c30"
                android:textSize="22sp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ethiopia7"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ethiopia Coffee Map, Zones and Woredas."
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                style="@style/TEXT"

                android:fontFamily="@font/robotaslabregular"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_history"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_history1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Production"
                android:fontFamily="@font/robotoslabblack"
                android:background="#ffff00"
                android:layout_marginTop="36dp"
                android:textColor="#db3c30"
                android:textSize="22sp"

                android:layout_gravity="center_horizontal"/>


            <ImageView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ethiaopiacoffeeproduct"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A training seminar for coffee tasters (cuppers) in 2003"
                android:layout_marginTop="7dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                style="@style/TEXT"

                android:fontFamily="@font/robotaslabregular"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_2"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_3"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_4"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_5"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Starbucks and Ethiopian coffee"
                android:fontFamily="@font/robotoslabblack"
                android:background="#ffff00"
                android:layout_marginTop="36dp"
                android:textColor="#db3c30"
                style="@style/TEXT"

                android:textSize="22sp"
                android:layout_gravity="center_horizontal"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_7"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_8"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_9"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_10"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_11"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/ethiopia_12"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:textSize="18sp"
                style="@style/TEXT"

                android:fontFamily="@font/robotoslabsemibold"
                android:textColor="@color/black"
                />





        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>