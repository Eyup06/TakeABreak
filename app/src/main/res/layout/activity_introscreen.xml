<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/SCREEN"
    tools:context=".introscreen">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="106dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/getStartedBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            app:lottie_autoPlay="true"
            app:lottie_cacheComposition="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/animation_lk6rwswx"
            app:lottie_speed="1" />

        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="30dp"
            android:background="#731d1d"

            android:fontFamily="@font/robotoslabextrabold"
            android:text="Welcome to World Coffees"
            android:textColor="@color/white"
            android:textSize="30sp" />

        <TextView
            style="@style/TEXT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="50dp"
            android:background="#731d1d"

            android:fontFamily="@string/robotoslablight"
            android:text="Discover the world's most famous coffees"
            android:textColor="@color/white"
            android:textSize="25sp" />

    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:background="@drawable/bg_btn_intro"
        android:backgroundTint="@color/brown"
        android:id="@+id/getStartedBtn"
        android:fontFamily="@font/robotoslabbold"
        android:text="Get's Started"
        android:textColor="@color/white"
        style="@style/BUTTON"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>